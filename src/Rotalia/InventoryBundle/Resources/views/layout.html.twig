<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <!-- Set the viewport width to device width for mobile -->
        <meta name="viewport" content="width=device-width" />

        <title>{% block title %}Inventar{% endblock %}</title>

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
        {% block stylesheets %}
            <link href="{{ asset('bundles/rotaliainventory/css/main.css') }}" rel="stylesheet">
            <link href="{{ asset('bundles/rotaliainventory/css/inventory.css') }}" rel="stylesheet">
            <link href="{{ asset('bundles/rotaliainventory/css/print.css') }}" rel="stylesheet" media="print">
        {% endblock %}

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/rotaliainventory/js/jquery.2.1.0.min.js') }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        {% endblock %}
    </head>

    <body>
        <div id="menu">
            <div id="container1">
                <div id="logo">
                    <a href="{{ path('_welcome') }}">korp! Rotalia õllekassa</a>
                </div>
                <div id="profile">
                    <ul>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") -%}
                            <li><strong>{{ app.user.member.fullName }}</strong></li>
                            {#<li class="credit-{{ app.user.member.credit.creditStatus }}">#}
                                {#{{- app.user.member.credit.credit | number_format(2, '.', ',') ~ '€' -}}#}
                            {#</li>#}
                            <li><a href="{{ path('fos_user_security_logout') }}">Välju</a></li>
                        {% else %}
                            <li><a href="{{ path('fos_user_security_login') }}">Sisene</a></li>
                        {%- endif %}
                    </ul>
                </div>
                <div class="clear">
                    <ul>
                        <li><a href="{{ path('RotaliaReport_list') }}">Õllekassa aruanded</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('RotaliaInventory_list') }}">Tooted</a></li>
                        <li><a href="{{ path('RotaliaInventory_statsProducts') }}">Statistika</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>

        <div id="container2">{# body #}
            <div id="container3">
                {% block body %}
                    {# Display flashes #}
                    {% block flash %}
                        {% for label, flashes in app.session.flashbag.all %}
                            {% for flash in flashes %}
                                <div class="msg msg-{{ label }}">
                                    <div>
                                        <p>{{ flash }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endblock %}
                    {# override this block in template #}
                {% endblock %}
            </div>
        </div>
    </body>
</html>
